{
  "name": "server",
  "version": "1.0.0",
  "description": "",
  "main": "index.js",
  "husky": {
    "hooks": {
      "pre-commit": "npm run lint"
    }
  },
  "scripts": {
    "build": "npm tsc",
    "dev": "npx ts-node-dev --transpile-only ./src/index.ts",
    "start:prod": "NODE_ENV=production node ./dist/index.js",
    "start": "node ./dist/index.js",
    "start:dev": " NODE_ENV=development node ./dist/index.js",
    "start:staging": "NODE_ENV=staging node ./dist/index.js",
    "git:push": "npm version patch && git push",
    "test:watch": "vitest --reporter verbose --globals",
    "test": "vitest --run --globals",
    "benchmark": "vitest bench --run --globals",
    "lint": "eslint src/**/*.ts",
    "format": "eslint src/**/*.ts --fix"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "express": "^4.18.2",
    "mongoose": "^8.0.0",
    "socketio": "^1.0.0"
  },
  "devDependencies": {
    "@types/express": "^4.17.20",
    "@types/node": "^20.8.10",
    "@typescript-eslint/eslint-plugin": "^6.9.1",
    "@typescript-eslint/parser": "^6.9.1",
    "eslint": "^8.53.0",
    "eslint-config-prettier": "^9.0.0",
    "eslint-plugin-prettier": "^5.0.1",
    "husky": "^8.0.3",
    "prettier": "^3.0.3"
  }
}
